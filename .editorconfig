# EditorConfig 统一代码编辑器配置
# https://editorconfig.org

root = true

# 所有文件
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Java 源代码
[*.java]
indent_style = space
indent_size = 4
max_line_length = 120

# Gradle 构建脚本
[*.gradle]
indent_style = space
indent_size = 4

# YAML 配置文件
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# XML 配置文件
[*.xml]
indent_style = space
indent_size = 4

# Markdown 文档
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# JSON 文件
[*.json]
indent_style = space
indent_size = 2

# Properties 文件
[*.properties]
indent_style = space
indent_size = 4
